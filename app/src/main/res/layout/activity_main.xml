<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.eddardgao.mymvvmdemo01.handler.OnMainClickHandler" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="此MVVM框架，使用Databinding ,ViewModel 的异步数据操作在Service里面进行，Service响应Activity的操作" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{handler::onClickToTest01}"
                android:padding="10dp"
                android:text="Client  + Service + BroadCast  T01" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{handler::onClickToTest02}"
                android:padding="10dp"
                android:text="几种Button的click 使用方式 T02" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{handler::onClickToTest03}"
                android:padding="10dp"
                android:text="测试EditText TextWatcher方法 T03" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{handler::onClickToTest04}"
                android:padding="10dp"
                android:text="测试MPChart 使用Databinding T04" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{handler::onClickToTest05}"
                android:padding="10dp"
                android:text="Material Design + RecycelrView 使用Databinding T05" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{handler::onClickToTest06}"
                android:padding="10dp"
                android:text="测试Fragment使用Databinding T06" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{handler::onClickToTest07}"
                android:padding="10dp"
                android:text="测试ViewPager +Fragment T07" />

        </LinearLayout>
    </ScrollView>
</layout>
